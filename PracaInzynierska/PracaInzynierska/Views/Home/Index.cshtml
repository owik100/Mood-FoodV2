@using PracaInzynierska.ViewModels;
@using PracaInzynierska.Infrastructure;
@model IndexViewModel
@{
    ViewData["Title"] = "Restauracja";
}
@section scripts
{
    <script type="text/javascript">

        $(document).ready(function () {
            $(".carousel-item:first").addClass("active");
        });
    </script>
}

<div class="container-fluid">
    <div class="row">
        <!--Random products-->
        <div class="col-md-4">
            <div id="productImageSlider" class="carousel slide" data-ride="carousel" data-interval="2000">
                <div class="carousel-inner">
                    @foreach (var item in Model.RandomProducts)
                    {
                        <div class="carousel-item">
                            <figure class="figure">
                                <a class="text-danger nounderline" asp-controller="Product" asp-action="Description" asp-route-id="@item.ProductId">
                                    <img src="@Url.ProductImagePath(item.NameOfImage)" class="img-fluid border border-dark border-3 ">
                                </a>
                                <figcaption class="figure-caption text-center">
                                    <a class="nounderline" asp-action="Description" asp-controller="Product" asp-route-id="@item.ProductId">
                                        <h3 class="font-weight-normal text-dark">@item.Name</h3>
                                    </a>
                                </figcaption>
                            </figure>
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#productImageSlider" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#productImageSlider" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <!--Product of the day-->
        <div class="col-md-8">
            <div class="container-fluid">
                <div class="jumbotron lightBackground text-center noPaddingBottom">
                    <div class="row">
                        <div class="col-md-4 my-3">
                            <a class="text-danger nounderline" asp-controller="Product" asp-action="Description" asp-route-id="@Model.ProductOfTheDay.ProductId">
                                <img src=@Url.ProductImagePath(Model.ProductOfTheDay.NameOfImage) class="img-fluid border border-dark border-3" alt="Obrazek produktu">
                            </a>
                        </div>
                        <div class="col-md-8 mt-3">
                            <h4 class="display-2 pt-2">Oferta dnia!</h4>
                            <a asp-controller="Product" asp-action="Description" asp-route-id="@Model.ProductOfTheDay.ProductId" class="display-3 pt-2 nounderline text-danger">@Model.ProductOfTheDay.Name</a>
                            <p class="lead ml-1">
                                @Model.ProductOfTheDay.Description
                            </p>
                            <hr />
                        </div>
                    </div>
                    <div class="row justify-content-lg-end">
                        <!-- <div class="col-lg-2 ">
                            <p class="font-weight-normal display-4 lineThrough">@Model.ProductOfTheDay.Price.ToString("c")</p>

                        </div> -->
                        <div class="col-lg-2">
                            <p class="font-weight-normal display-4 ">@((Model.ProductOfTheDay.Price).ToString("c"))</p>

                        </div>
                        <div class="col-lg-2">
                            <a asp-action="Add" asp-controller="Cart" asp-route-id="@Model.ProductOfTheDay.ProductId " class="btn btn-success">Dodaj do zamówienia</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

