@model IEnumerable<PracaInzynierska.Models.Entities.Restaurant>

@{
    ViewData["Title"] = "Restauracje";
    if(  TempData["Message"]!= null)
    {
    <div class=" alert alert-success">@TempData["Message"]</div>
    }
   
}

<h1 class="text-center display-4">Restauracje</h1>

<p class="text-center">
    <a class="btn btn-success btn-lg" asp-action="RestaurantCreateEdit">Dodaj nową restaurację</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxDistance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxDistance)
            </td>
            <td>
                <a class="btn btn-danger" asp-action="RestaurantDelete" asp-route-id="@item.RestaurantId">Usuń</a>
            </td>
            <td>
                <a class="btn btn-warning" asp-action="RestaurantCreateEdit" asp-route-id="@item.RestaurantId">Edytuj</a>
            </td>
        </tr>
        }
    </tbody>
</table>
