@using PracaInzynierska.Infrastructure;
@model PracaInzynierska.ViewModels.OrderDetailsViewModel

@{
    ViewData["Title"] = "Szczegóły zamówienia";
}

<h1 class="text-center display-4">Szczegóły zamówienia</h1>

<!--User-->
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.ZIPCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.HouseNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.Emial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.OrderValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.OptionalDescription)
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Order.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Order.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Order.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Order.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Order.ZIPCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Order.HouseNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Order.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Order.Emial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Order.OrderValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Order.OptionalDescription)
            </td>
        </tr>
</table>

<hr />

<!--Produkty-->
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderItems[0].Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderItems[0].Product.NameOfImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderItems[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderItems[0].PurchasePrice)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td >
                    <p>@item.Product.Name</p>
                </td>
                <td >
                    <img style="max-height:200px" src="@Url.ProductImagePath(item.Product.NameOfImage)" class="img-fluid border border-dark border-3 ">
                </td>
                <td>
                    <p>@item.Quantity</p>
                </td>
                <td>
                    <p>@item.PurchasePrice</p>
                </td>
            </tr>
        }
</table>
