@model PracaInzynierska.Models.Entities.Restaurant

@{
    ViewData["Title"] = "Restauracja usunięcie";
}

    <div class="container">
        <h3>Czy na pewno chcesz usunąć restaurację?</h3>
        <div>
            <h4>Restauracja</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.City)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.City)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Street)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Street)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Number)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Number)
                </dd>
            </dl>

            <form asp-action="RestaurantDelete">
                <input type="hidden" asp-for="RestaurantId" />
                <input type="submit" value="Usuń" class="btn btn-danger" /> 
                <a class="btn btn-secondary" asp-action="Index">Wróć</a>
            </form>
        </div>

    </div>
