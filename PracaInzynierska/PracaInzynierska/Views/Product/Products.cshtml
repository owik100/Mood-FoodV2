@model IEnumerable<PracaInzynierska.Models.Entities.Product>
@using PracaInzynierska.Infrastructure;

@{
    ViewBag.Title = "Produkty";
}

@await Component.InvokeAsync("CategoryNavigation")
<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-sm-6">
                <a class="text-danger nounderline" asp-controller="Product" asp-action="Description" asp-route-id="@item.ProductId">
                    <h3 class="display-5 text-center font-weight-normal text-dark">@item.Name</h3>
                    <img class="img-fluid border border-dark border-3" src=@Url.ProductImagePath(item.NameOfImage) />
                </a>
            </div>
        }
    </div>
</div>